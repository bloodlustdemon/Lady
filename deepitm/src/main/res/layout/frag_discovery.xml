<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.huawei.deepitm.widget.TopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            app:lt_img="@drawable/slct_bell"
            app:lt_img2="@drawable/ic_refresh"
            app:rt_img="@drawable/slct_search"
            android:layout_height="wrap_content"/>
    <View
            android:layout_width="match_parent"
            android:background="@color/lighter_gray"
            android:layout_height="1dp"/>


    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/tab"
            app:tabGravity="fill"
            app:tabTextAppearance="@style/tab_style"
            app:tabIndicatorColor="@color/blue_btn"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_height="40dp">

        <TextView
                android:id="@+id/tv"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:text="@string/preference_private"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_width="20dp"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitCenter"
                android:id="@+id/img"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_menu"
                android:layout_height="20dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dip"/>
</LinearLayout>